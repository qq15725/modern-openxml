{
  "name": "modern-openxml-monorepo",
  "type": "module",
  "private": true,
  "version": "1.9.0",
  "packageManager": "pnpm@10.18.1",
  "scripts": {
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "lint": "pnpm -r lint",
    "cli": "pnpm -F @modern-openxml/cli cli",
    "stub": "pnpm -F @modern-openxml/cli stub",
    "dev": "vite docs",
    "publish": "pnpm -r publish --no-git-checks --access public",
    "version": "conventional-changelog -p angular -i CHANGELOG.md -s && git add CHANGELOG.md",
    "release": "bumpp package.json packages/*/package.json --commit \"release: v%s\" --push --all --tag"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^5.4.1",
    "@types/node": "^24.7.0",
    "bumpp": "^10.3.1",
    "conventional-changelog-cli": "^5.0.0",
    "eslint": "^9.37.0",
    "lint-staged": "^16.2.3",
    "modern-idoc-svg": "^0.0.6",
    "simple-git-hooks": "^2.13.1",
    "typescript": "^5.9.3",
    "unbuild": "^3.6.1",
    "vite": "^7.1.9",
    "vitest": "^3.2.4"
  }
}
